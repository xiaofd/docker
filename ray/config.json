{
  "log": {
    "access": "/etc/xray/access.log",
    "error": "/etc/xray/error.log",
    "loglevel": "warning"
  },
  "inbounds": [
    // ==========================================
    // 1. TCP 主入口 (Vision + 网站回落 + WS分流)
    // ==========================================
    {
      "tag": "vless-vision-in",
      "port": xx-port,          // 保持你原本的端口变量
      "protocol": "vless",
      "settings": {
        "clients": [
          {
            "id": "xx-uuid",
            "flow": "xtls-rprx-vision",
            "level": 0,
            "email": "love@example.com"
          }
        ],
        "decryption": "none",
        "fallbacks": [
          // 策略 A: 你的 WS 路径分流
          {
            "path": "/xx-path",
            "dest": 60004,
            "xver": 1
          },
          // 策略 B: 默认回落到你的网站服务 (60003)
          {
            "dest": 60003,
            "xver": 0
          }
        ]
      },
      "streamSettings": {
        "network": "tcp",
        "security": "tls",
        "tlsSettings": {
          "rejectUnknownSni": true,
          "alpn": [
            "h2",
            "http/1.1"
          ],
          "certificates": [
            {
              "certificateFile": "/etc/xray/xray.crt",
              "keyFile": "/etc/xray/xray.key"
            }
          ]
        }
      },
      "sniffing": {
        "enabled": true,
        "destOverride": [
          "http",
          "tls"
        ]
      }
    },

    // ==========================================
    // 2. WS 回落接收口 (仅本地监听)
    // ==========================================
    {
      "tag": "vless-ws-in",
      "port": 60004,
      "listen": "127.0.0.1",
      "protocol": "vless",
      "settings": {
        "clients": [
          {
            "id": "xx-uuid",
            "level": 0,
            "email": "love@example.com"
          }
        ],
        "decryption": "none"
      },
      "streamSettings": {
        "network": "ws",
        "security": "none",
        "wsSettings": {
          "acceptProxyProtocol": true,
          "path": "/xx-path"
        }
      }
    }
  ],
  "outbounds": [
    {
      "protocol": "freedom"
    },
    {
      "protocol": "blackhole",
      "tag": "blocked"
    }
  ]
}
